
@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Layout/_homeLayout.cshtml";
}

    <script src="~/Content/assets/front-end/js/apply.js"></script>
    <link href="~/Content/assets/front-end/css/applyCV.css" rel="stylesheet" />
<button id="btnApply">Nộp Đơn</button>
<div class="fallBack">
    <div class="popup">
        Bạn đang ứng tuyển cho vị trí
        <h2> Hanoi - Hot Job for Fresh Graduate - Customer Experience Representative (Không Yêu Cầu Kinh Nghiệm)</h2>
        <form action="~/Upload/UploadCV.aspx" class="form-data" method="post" enctype="multipart/form-data">
            <div class="row">
                <label for="" class="">Tên Của Bạn</label>
                <input type="text" value="Đình Phong" name="name" required>
            </div>
            <div class="row">
                <label for="">Email nhận phản hồi</label>
                <input type="text" name="email" required >
            </div>
            <div class="row">
                <label for="">Số điện thoại</label>
                <input type="text" name="phone" required>
            </div>
            <div class="row">
                <label for="">Hồ Sơ Ứng Tuyển</label>
                <input type="file" name="fileCV" required>
            </div>
            <div class="row">
                <button class="btn" id="closePopup">Hủy</button>
                <input type="submit" value="Nộp Đơn" class="btn">
            </div>
        </form>
    </div>
</div>


