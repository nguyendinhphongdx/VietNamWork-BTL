
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout/_homeLayout.cshtml";
}

<link href="~/Content/assets/front-end/css/LoginAndRegestry.css" rel="stylesheet" />
<script src="~/Content/assets/front-end/js/custumerLogin.js"></script>
<div class="box">
    <form class="login" onsubmit="return false">
        <div class="title">Người Dùng Đăng Nhập</div>
        <div class="row">
            <label for="">Tên Đăng Nhập : </label>
            <input type="text" placeholder="Nhập Tên Đăng Nhập" id="name">
        </div>
        <div class="row">
            <label for="">Mật Khẩu : </label>
            <input type="password" placeholder="Nhập Mật Khẩu" id="password">
        </div>
        <input type="submit" value="Đăng Nhập" onclick="login()">
        <p>
            Bạn chưa có tài khoản ? <a href="">@Html.ActionLink("Đăng Ký.", "Regestry", "Custumer")</a>
        </p>
    </form>
    <div class="connection">
        <label for="">Đăng Nhập Bằng Facebook</label>
        <button class="facebook">Facebook</button>
        <label for="">Đăng Nhập Bằng Google</label>
        <button class="google">Google</button>
    </div>
</div>


