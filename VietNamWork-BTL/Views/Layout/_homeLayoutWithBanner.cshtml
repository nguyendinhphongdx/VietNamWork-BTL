<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Content/assets/front-end/images/iconweb.png" type="image/gif" sizes="16x16">
    <title>VietNamWorks</title>
    <link href="~/Content/assets/front-end/css/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets/front-end/font/font-awesome/css/all.css">
    <link rel="stylesheet" href="~/Content/assets/front-end/css/reponsive.css">
    <script src="~/Content/assets/front-end/js/tab-menu.js"></script>

</head>

<body onload="setup()">
    <div class="wrapper">
        <div class="header">
            <div class="tab-menu" style="transform: translateX(-100%); transition-duration: 300ms;">
                <a>
                    <div class="logo">
                        <img src="~/Content/assets/front-end/images/vnw_logo_white.png" alt="">
                    </div>
                </a>
                <div class="menu">
                    <ul class="main-menu">
                        <li>@Html.ActionLink("Jobs", "Jobs", "Custumer")</li>
                        <li>@Html.ActionLink("Interviews", "Interviews", "Custumer")</li>
                        <li>@Html.ActionLink("Companies", "Companies", "Custumer")</li>
                        <li>
                            <a href="">Courses</a>
                        </li>
                        <li>
                            <a href="">HR Insider</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="header-left">
                <div class="bar" onclick="active_tab_menu()" id="button">
                    <div class="icon-bar"><i class="fas fa-bars"></i></div>
                </div>
                <div class="logo">
                    <a href="/Custumer/Index"> <img src="~/Content/assets/front-end/images/vnw_logo_white.png" alt=""></a>
                </div>
                <div class="menu">
                    <ul class="main-menu">
                        <li>@Html.ActionLink("Jobs", "Jobs", "Custumer")</li>
                        <li>@Html.ActionLink("Interviews", "Interviews", "Custumer")</li>
                        <li>@Html.ActionLink("Companies", "Companies", "Custumer")</li>
                        <li>
                            <a href="">Courses</a>
                        </li>
                        <li>
                            <a href="">HR Insider</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="header-right">
                <ul class="tools">
                    <li>For Employee</li>
                    <li>
                        <div class="notification"><i class="fas fa-bell fa-1x"></i></div>
                    </li>
                    <li id="group-signIn">
                        <div class="sign-in" onclick="clickSignIn()">
                            <i class="fas fa-user"></i> <span id="username">Sign In</span>
                            <i class="fas fa-sort-down"></i>
                        </div>
                        <div class="formSignIn" style="display: none;">
                            <div class="title-signIn">Người Tìm Viêc Đăng Nhập</div>
                            <button id="btnLogin"><a href="">@Html.ActionLink("Đăng Nhập", "Login", "Custumer")</a></button>
                            <div class="title-signIn">Người Tìm Viêc Đăng Ký</div>
                            <button id="btnSignin"><a href="">@Html.ActionLink("Đăng Ký", "Regestry", "Custumer")</a></button>
                            <p id="forgot">Bạn <a href="">Quên Tài Khoản/ Mật Khẩu ?</a></p>
                        </div>
                        <div class="formLogout" style="display: none;">
                            <div class="title-signIn"> <a href="" class="manage">Quản Lý Tài Khoản</a></div>
                            <div class="title-signIn"> <a href="" class="logout" onclick="logout()">Đăng Xuất</a></div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="navigation">
            <div class="slides">
                <div class="slider">
                    <input type="radio" name="r" id="r1" checked>
                    <input type="radio" name="r" id="r2">
                    <input type="radio" name="r" id="r3">
                    <input type="radio" name="r" id="r4">
                    <div class="picture s1">
                        <img src="/Content/assets/front-end/images/banner2.jpg" alt="" class="banner">
                    </div>
                    <div class="picture">
                        <img src="/Content/assets/front-end/images/banner.jpg" alt="" class="banner">
                    </div>
                    <div class="picture">
                        <img src="/Content/assets/front-end/images/banner3.jpg" alt="" class="banner">
                    </div>
                    <div class="picture">
                        <img src="/Content/assets/front-end/images/banner4.jpg" alt="" class="banner">
                    </div>
                </div>
                <div class="label-controll-banner">
                    <label for="r1" class="lable-bar bar"></label>
                    <label for="r2" class="lable-bar bar"></label>
                    <label for="r3" class="lable-bar bar"></label>
                    <label for="r4" class="lable-bar bar"></label>
                </div>
                <div class="group-search">
                    <div class="title">
                        Find Work for you
                    </div>
                    <div class="box-search">
                        <div class="container-search">
                            <div class="input-search">
                                <span><i class="fas fa-search fa-1x"></i></span>
                                <input type="text" id="key-search">
                            </div>
                            <button onclick="search()" >Tìm Kiếm</button>
                        </div>

                    </div>
                </div>


            </div>
        </div>
        <div class="content">
            <div class="container">
                @RenderBody()
            </div>
        </div>
        <div class="footer">
            <div class="footer-container">
                <div class="footer-logo">
                    <img src="~/Content/assets/front-end/images/vnw_logo_white.png" alt="">
                </div>
                <div class="info-contact">
                    <ul class="for-employ">
                        <div class="tile">
                            Dành Cho Nhà Tuyển Dụng
                        </div>
                        <li>
                            <a href="">Đăng Tin Tuyển Dụng</a>
                        </li>
                        <li>
                            <a href="">Tìm Kiếm Hồ Sơ</a>
                        </li>
                        <li>
                            <a href="">Giải Pháp Talent Solution</a>
                        </li>
                    </ul>
                    <ul class="for-employ">
                        <div class="tile">
                            Dành Cho Nhà Tuyển Dụng
                        </div>
                        <li>
                            <a href="">Đăng Tin Tuyển Dụng</a>
                        </li>
                        <li>
                            <a href="">Tìm Kiếm Hồ Sơ</a>
                        </li>
                        <li>
                            <a href="">Giải Pháp Talent Solution</a>
                        </li>
                    </ul>
                    <ul class="for-employ">
                        <div class="tile">
                            Việc Làm Theo Khu Vực
                        </div>
                        <li>
                            <a href="">Hà Nội</a>
                        </li>
                        <li>
                            <a href="">Hải Phòng</a>
                        </li>
                        <li>
                            <a href="">Đà Nẵng</a>
                        </li>
                        <li>
