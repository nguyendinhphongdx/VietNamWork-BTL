
@{
    ViewBag.Title = "edit_job";
    Layout = "~/Views/Layout/_adminLayout.cshtml";
}
<script src="~/Content/assets/back-end/js/edit-job.js"></script>
<div class="title">
    Cập Nhật Công Việc
</div>
<div class="table-user">
    <div class="box-form">
        <form action="" onsubmit="return false" enctype="multipart/form-data">
            <div class="row">

                <label for="">Picture</label>
                <img src="" alt="" style="width:120px" id="imgsrc">
                <input type="file" id="image"">
            </div>
            <div class="row">
                <label for="">Name</label>
                <input type="text" placeholder="Name" id="name">
            </div>
            <div class="row">
                <label for="">COmpany</label>
                <input type="text" placeholder="COmpany" id="company">
            </div>
            <div class="row">
                <label for="">Salary</label>
                <input type="text" placeholder="Salary" id="salary">
            </div>
            <div class="row">
                <label for="">Address</label>
                <input type="text" placeholder="Address" id="address">
            </div>
            <div class="row" id="disable">
                <label for="">Status</label>
                <input type="checkbox" name="disable" id="idisable" value="not">
                <label id="lbdi" for="idisable">Hot</label>
            </div>
            <div class="row">
                <input type="submit" name="" id="" value="Update Job" onclick="UpdateJob()">
            </div>
        </form>
    </div>

</div>